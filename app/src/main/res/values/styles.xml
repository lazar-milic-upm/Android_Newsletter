<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ArticleTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ArticleAbstract">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/MyToolbarTitle</item>
        <item name="background">@color/primaryColor</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="MyToolbarTitle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>